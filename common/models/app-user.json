{
  "name": "AppUser",
  "base": "User",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "hidden": [
    "password",
    "verificationToken",
    "busy",
    "warnings",
    "disabled"
  ],
  "properties": {
    "score": {
      "type": "number",
      "default": 0
    },
    "warnings": {
      "type": "number",
      "default": 0
    },
    "busy": {
      "type": "boolean",
      "default": false
    },
    "disabled": {
      "type": "boolean",
      "default": false
    },
    "completedTutorial": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "administrator",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "loadRoles"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "leaderboard"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "score"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "busy"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "completeTutorial"
    }
  ],
  "methods": {
    "prototype.setRole": {
      "accepts": [
        {
          "arg": "rolename",
          "type": "number",
          "required": true,
          "description": "Name of the role which should be given (must exist on system)",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": [
        {
          "arg": "success",
          "type": "boolean",
          "root": true,
          "description": "Indicates whether the operation was successful"
        }
      ],
      "description": "Give a user a role and additionally all roles below if hierachical rbac is allowed",
      "http": [
        {
          "path": "/roles",
          "verb": "post"
        }
      ]
    }
  }
}
