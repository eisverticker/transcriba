{
  "name": "Collection",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true,
      "default": "empty"
    },
    "public": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "locked": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "transcribaObjects": {
      "type": "hasMany",
      "model": "TranscribaObject",
      "through": "CollectionMapping",
      "invert": true,
      "polymorphic": "collectionable"
    },
    "collections": {
      "type": "hasMany",
      "model": "Collection",
      "through": "CollectionMapping",
      "invert": true,
      "polymorphic": "collectionable"
    }
  },
  "acls": [],
  "methods": {
    "prototype.progress": {
      "accepts": [],
      "returns": [
        {
          "arg": "progressPercentage",
          "type": "number",
          "root": true,
          "description": "[0-100] where 100 means 100% complete"
        }
      ],
      "description": "Current completion status of this collection",
      "http": [
        {
          "path": "/progress",
          "verb": "get"
        }
      ]
    }
  }
}
