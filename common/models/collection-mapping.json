{
  "name": "CollectionMapping",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "itemType": {
      "type": "string",
      "required": true
    },
    "itemId": {
      "type": "string",
      "required": true
    },
    "textRole": {
      "type": "string",
      "default": "none"
    },
    "order": {
      "type": "number",
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "collection": {
      "type": "belongsTo",
      "model": "Collection",
      "foreignKey": "collectionId"
    },
    "transcribaObject": {
      "type": "belongsTo",
      "model": "TranscribaObject",
      "polymorphic": {
        "foreignKey": "itemId",
        "discriminator": "itemType"
      }
    }
  },
  "acls": [],
  "methods": {}
}
